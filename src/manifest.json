{
	"manifest_version": 2,

	"name": "Toggle WebRTC on and off",
	"short_name": "WebRTC on/off",
	"description": "Toggle WebRTC off and on to prevent IP leaks",

	"version": "2.4.0",
	"license": "MPL-2.0",

	"author": "Philipp Baranovskiy",
	"homepage_url": "https://github.com/PhilippBaranovskiy/webrtc-toggle-extension",
	"developer": {
		"name": "Philipp Baranovskiy",
		"url": "https://github.com/PhilippBaranovskiy"
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/icon_on_16.png",
			"32": "icons/icon_on_32.png",
			"48": "icons/icon_on_48.png",
			"64": "icons/icon_on_64.png"
		},
		"default_title": "Toggle WebRTC"
	},

	"icons": {
		"16": "icons/icon_on_16.png",
		"32": "icons/icon_on_32.png",
		"48": "icons/icon_on_48.png",
		"64": "icons/icon_on_64.png"
	},

	"background": {
		"scripts": ["js/webrtc_toggler.js"]
	},

	"permissions": ["privacy", "browserSettings"],

	"browser_specific_settings": {
		"gecko": {
			"id": "webrtc-toggler@philippbaranovskiy.github.com",
			"data_collection_permissions": {
				"required": ["none"]
			}
		}
	}
}
