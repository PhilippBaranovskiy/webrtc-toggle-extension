{
  "manifest_version": 2,
  "name": "Toggle WebRTC on and off",
  "version": "2.0.0",

  "description": "Toggle WebRTC off and on to prevent IP leaks",

  "browser_action": {
    "default_icon": {
      "16": "images/on-16.png",
      "32": "images/on-32.png",
      "48": "images/on-48.png",
      "64": "images/on-64.png"
    },
    "default_title": "Toggle WebRTC"
  },

  "icons": {
    "16": "images/on-16.png",
    "32": "images/on-32.png",
    "48": "images/on-48.png",
    "64": "images/on-64.png"
  },

  "background": {
    "scripts": ["js/webrtc_toggler.js"]
  },

  "permissions": ["privacy", "browserSettings"]

}
